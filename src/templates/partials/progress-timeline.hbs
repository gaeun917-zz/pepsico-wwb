<div class="progress-timeline" id="progress-timeline">

    {{!-- Mobile carousel --}}
    <div class="progress-timeline__carousel-wrapper swiper-container" id="progress-timeline__carousel-wrapper">
        <div class="progress-timeline__pagination" id="progress-timeline__pagination"></div>
        <div class="progress-timeline__arrows">
            <span class="progress-timeline__arrow progress-timeline__arrow--prev" id="progress-timeline__arrow--prev"></span>
            <span class="progress-timeline__arrow progress-timeline__arrow--next" id="progress-timeline__arrow--next"></span>
        </div>        
        <div class="swiper-wrapper">
            {{#each progress ~}}
            <div class="swiper-slide progress-timeline__slide">
                <img class="progress-timeline__image" src="img/{{this.image-filename}}" alt="{{this.title}}">
                <div class="progress-timeline__copy-container">
                    <p class="progress-timeline__title">{{{this.title}}}</p>
                    <p class="copy progress-timeline__copy">{{{this.copy}}}</p>
                </div>
            </div>
            {{~/each}}
        </div>
        <img src="img/icon-swipe--grey.png" alt="Swipe to view more" class="progress-timeline__swipe-icon">
    </div>

    {{!-- Desktop carousel --}}
    <div class="container progress-timeline--desktop">
        <div class="progress-timeline--desktop__image-carousel">
            {{#eachProperty progress ~}}
            <img class="progress-timeline--desktop__image prog-tl-{{key}}" src="img/{{value.image-filename}}" alt="{{value.title}}" id="prog-tl-{{key}}">
            {{~/eachProperty}}
        </div>
        
        <div class="container progress-timeline--desktop__slider-container" id="progress-timeline--desktop__slider-container">
            <div class="progress-timeline--desktop__slider" id="progress-timeline--desktop__slider"></div>
        </div>

    </div>

</div>