<!-- START PRINCIPLES -->
    <section class="principles">
        <div class="principles__coloured-overlay" id="principles__coloured-overlay"></div>
        <div class="container principles__header-wrap">
            <h2 class="principles__header underline">Our guiding <em>principles</em></h2>
        </div>
        <div class="principles--desktop container" id="principles--desktop">
            <div class="container">
                {{#eachProperty principles ~}}
                <div class="principles--desktop__item" data-principle-index="{{key}}">
                    <img src="img/icon-{{value.icon}}.png" alt="{{value.sub-header}}">
                    <p>{{{value.sub-header}}}</p>
                </div>
                {{~/eachProperty}}
            </div>
        </div><!--

        --><div class="principles--mobile swiper-container" id="principles--mobile">
            <div class="principles__btn-close" id="principles__btn-close"></div>
            <div class="principles__arrow principles__arrow-prev" id="principles__prev-btn"></div>
            <div class="principles__arrow principles__arrow-next" id="principles__next-btn"></div>
            <div class="swiper-wrapper">
                {{#each principles ~}}
                <div class="swiper-slide">
                    <img src="img/icon-{{this.icon}}.png" alt="{{this.sub-header}}">
                    <p>{{{this.sub-header}}}</p>
                    <div class="container">
                        {{#each this.copy}}
                        <p class="copy">{{this}}</p>
                        {{~/each}}
                    </div>
                        
                </div>
                {{~/each}}
            </div>

            <img class="principles--mobile__swipe-cta" src="img/icon-swipe.png" alt="Swipe left and right">
        </div>
    </section>
    <!-- END PRINCIPLES -->