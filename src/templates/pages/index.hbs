            <div class="principles--desktop swiper-container">
                {{#each principles ~}}
                <div class="principles--desktop__item">
                    <img src="img/icon-{{this.icon}}.png" alt="{{this.copy}}">
                    <p>{{{this.copy}}}</p>
                </div>
                {{~/each}}
            </div>
        </div>

        <div class="principles--mobile swiper-container" id="principles--mobile">
            <div class="swiper-wrapper">
                {{#each principles ~}}
                <div class="swiper-slide">
                    <img src="img/icon-{{this.icon}}.png" alt="{{this.copy}}">
                    <p>{{{this.copy}}}</p>
                </div>
                {{~/each}}
            </div>

            <img class="principles--mobile__swipe-cta" src="img/icon-swipe.png" alt="Swipe left and right">
